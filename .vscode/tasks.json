{
	"version": "2.0.0",
	"configurations": [
		{
			"name": "Depurar",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/test_Branch", // Ruta al ejecutable compilado con -g
			"args": [], // Argumentos adicionales del programa, si los hay
			"stopAtEntry": false, // Si debe detenerse en la entrada del programa
			"cwd": "${workspaceFolder}", // Directorio de trabajo
			"environment": [], // Variables de entorno
			"externalConsole": false, // Si se utiliza una consola externa
			"MIMode": "gdb", // Modo del depurador (en este caso, GDB)
			"miDebuggerPath": "/usr/bin/gdb", // Ruta al ejecutable del depurador
			"setupCommands": [ // Comandos adicionales de configuración del depurador
				{
					"description": "Habilitar impresión completa de backtraces en errores",
					"text": "-enable-pretty-printing",
					"ignoreFailures": true
				}
			]
		}
	]
}